.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 10px;
  background-color: #f5f5f5;
}

.message-list {
  flex: 1;
  overflow-y: scroll;
  padding-bottom: 10px;
}

.message {
  margin: 10px 0;
  padding: 10px;
  border-radius: 10px;
  max-width: 70%;
  word-wrap: break-word;
}

.sent {
  align-self: flex-end;
  background-color: #9eea6a;
}

.received {
  align-self: flex-start;
  background-color: #ffffff;
}

.input-container {
  display: flex;
  padding: 10px;
  background-color: #ffffff;
}

.message-input {
  flex: 1;
  border: none;
  padding: 10px;
  border-radius: 20px;
  background-color: #f1f1f1;
}

.send-button {
  margin-left: 10px;
  padding: 10px 20px;
  border: none;
  border-radius: 20px;
  background-color: #07c160;
  color: white;
}
